{
	"name": "linxup",
	"description": "AI-powered broken link checker that explains what broke, why it matters, and suggests fixes. Built for nonprofits and businesses that need intelligent link monitoring.",
	"version": "0.1.0",
	"license": "MIT",
	"repository": "jbuz13/linXup-core",
	"author": "jbuz13",
	"exports": "./build/src/index.js",
	"types": "./build/src/index.d.ts",
	"type": "module",
	"bin": {
		"linxup": "./build/src/cli.js"
	},
	"scripts": {
		"prepare": "husky && npm run build",
		"coverage": "vitest run --coverage",
		"build": "tsc -p .",
		"build-binaries": "bun build ./build/src/cli.js --compile --minify --sourcemap --target=bun --outfile ./build/binaries/linkinator-linux && bun build ./build/src/cli.js --compile --minify --sourcemap --target=bun-windows --outfile ./build/binaries/linkinator-win.exe && bun build ./build/src/cli.js --compile --minify --sourcemap --target=bun-darwin --outfile ./build/binaries/linkinator-macos",
		"test": "vitest",
		"fix": "biome check --write .",
		"lint": "biome check .",
		"docs-test": "node build/src/cli.js ./README.md --markdown",
		"update-schema-org-types": "node src/tools/update-schema-org-types.ts"
	},
	"dependencies": {
		"@types/pg": "^8.15.6",
		"chalk": "^5.0.0",
		"dotenv": "^17.2.3",
		"escape-html": "^1.0.3",
		"glob": "^10.3.10",
		"htmlparser2": "^10.0.0",
		"marked": "^17.0.0",
		"marked-gfm-heading-id": "^4.1.3",
		"meow": "^14.0.0",
		"mime": "^4.0.0",
		"pg": "^8.16.3",
		"server-destroy": "^1.0.1",
		"srcset": "^5.0.0",
		"undici": "^7.16.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.4",
		"@types/escape-html": "^1.0.1",
		"@types/server-destroy": "^1.0.1",
		"@vitest/coverage-v8": "^4.0.0",
		"execa": "^9.0.0",
		"husky": "^9.0.11",
		"strip-ansi": "^7.0.1",
		"typescript": "^5.5.2",
		"vitest": "^4.0.0"
	},
	"engines": {
		"node": ">=20"
	},
	"files": [
		"build/src"
	],
	"keywords": [
		"ai link checker",
		"intelligent link validator",
		"broken link checker",
		"ai-powered",
		"link checker",
		"dead link checker",
		"link validator",
		"url validator",
		"broken links",
		"dead links",
		"404",
		"crawler",
		"spider",
		"html",
		"hyperlink",
		"links",
		"seo",
		"seo tools",
		"website validator",
		"link tester",
		"nonprofit tools",
		"website monitoring",
		"gpt-4",
		"openai",
		"link analysis",
		"url",
		"broken",
		"link",
		"checker",
		"validator"
	]
}
